<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_size_tree_view" model="ir.ui.view">
            <field name="name">Product Size Tree View</field>
            <field name="model">product.size</field>
            <field name="arch" type="xml">
                <tree string="Size">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="product_size_form_view" model="ir.ui.view">
            <field name="name">Product Size Form View</field>
            <field name="model">product.size</field>
            <field name="arch" type="xml">
                <form string="Size">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="25" model="product.size">
            <field name="name">25</field>
        </record>
