        </record>
        <record id="xl" model="product.size">
            <field name="name">XL</field>
        </record>
        <record id="xxl" model="product.size">
            <field name="name">XXL</field>
        </record>


        <record id="product_size_action" model="ir.actions.act_window">
            <field name="name">Size</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.size</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="product_size" name="Size" sequence="4" action="product_size_action" parent="products_menu_parent"/>

    </data>
</odoo>
